{
  "name": "coding-components",
  "config": {
    "schemer_version": "2.6.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --project=coding-components",
    "build:elements": "ng build --project coding-components -c elements",
    "serve:elements": "npx http-server dist/coding-components-elements -p 8081",
    "buildxx": "ng run coding-components:build",
    "build_cc": "rm -rf dist/ngx-coding-components && ng build ngx-coding-components",
    "build": "npm run build_cc && npm run start",
    "build_sc": "rm -f dist/*.* && rm -rf dist/schemer && ng build --project schemer --output-hashing=none",
    "pack_sc": "node scripts/wrap_and_pack.js schemer $npm_package_config_schemer_version projects/schemer/src/html_wrapper/index.html",
    "buildAndPack_sc": "npm run build_sc && npm run pack_sc",
    "npm_publish": "npm run npm_publish_cc && npm run npm_publish_elements",
    "npm_publish_cc": "cd dist/ngx-coding-components && npm publish --access public",
    "npm_publish_elements": "cd dist/coding-components-elements && npm publish --access public",
    "lint": "eslint -c .eslintrc.cjs src projects --ext .ts,.js --cache --ignore-pattern '**/karma.conf.js'",
    "lint:fix": "eslint -c .eslintrc.cjs src projects --ext .ts,.js --fix --cache --ignore-pattern '**/karma.conf.js'",
    "validate:scheme": "node scripts/validate-coding-scheme.js",
    "test": "npm run test:cc && npm run test:schemer",
    "test:watch": "npm run test:cc:watch",
    "test:cc": "ng test ngx-coding-components --watch=false --browsers=ChromeHeadless",
    "test:cc:watch": "ng test ngx-coding-components",
    "test:cc:coverage": "ng test ngx-coding-components --watch=false --browsers=ChromeHeadless --code-coverage",
    "test:schemer": "ng test schemer --watch=false --browsers=ChromeHeadless",
    "test:schemer:watch": "ng test schemer",
    "test:schemer:coverage": "ng test schemer --watch=false --browsers=ChromeHeadless --code-coverage",
    "test:coverage": "npm run test:cc:coverage && npm run test:schemer:coverage"
  },
  "dependencies": {
    "@angular/animations": "^20.0.5",
    "@angular/cdk": "^20.0.4",
    "@angular/common": "^20.0.5",
    "@angular/compiler": "^20.0.5",
    "@angular/core": "^20.3.16",
    "@angular/elements": "^20.0.5",
    "@angular/forms": "^20.0.5",
    "@angular/material": "^20.0.4",
    "@angular/platform-browser": "^20.0.5",
    "@angular/platform-browser-dynamic": "^20.0.5",
    "@angular/router": "^20.0.5",
    "@iqb/responses": "^5.0.0",
    "@iqbspecs/coding-scheme": "^3.3.1",
    "@iqbspecs/response": "^1.4.0",
    "@iqbspecs/validate-json": "^0.4.0",
    "@iqbspecs/variable-info": "^1.3.0",
    "@ngx-translate/core": "^15.0.0",
    "mathjs": "^15.1.0",
    "ngx-build-plus": "^20.0.0",
    "prosemirror-state": "^1.4.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.23.1",
    "@tiptap/extension-blockquote": "^2.23.1",
    "@tiptap/extension-bold": "^2.23.1",
    "@tiptap/extension-bubble-menu": "^2.23.1",
    "@tiptap/extension-bullet-list": "^2.23.1",
    "@tiptap/extension-color": "^2.23.1",
    "@tiptap/extension-document": "^2.23.1",
    "@tiptap/extension-floating-menu": "^2.23.1",
    "@tiptap/extension-font-family": "^2.23.1",
    "@tiptap/extension-heading": "^2.23.1",
    "@tiptap/extension-highlight": "^2.23.1",
    "@tiptap/extension-history": "^2.23.1",
    "@tiptap/extension-image": "^2.23.1",
    "@tiptap/extension-italic": "^2.23.1",
    "@tiptap/extension-list-item": "^2.23.1",
    "@tiptap/extension-ordered-list": "^2.23.1",
    "@tiptap/extension-paragraph": "^2.23.1",
    "@tiptap/extension-strike": "^2.23.1",
    "@tiptap/extension-subscript": "^2.23.1",
    "@tiptap/extension-superscript": "^2.23.1",
    "@tiptap/extension-text": "^2.23.1",
    "@tiptap/extension-text-align": "^2.23.1",
    "@tiptap/extension-text-style": "^2.23.1",
    "@tiptap/extension-underline": "^2.23.1",
    "ngx-tiptap": "^12.0.0",
    "rxjs": "~7.8.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.4",
    "@angular-devkit/core": "^20.0.4",
    "@angular/build": "^20.0.4",
    "@angular/cli": "^20.0.4",
    "@angular/compiler-cli": "^20.0.5",
    "@iqb/eslint-config": "^2.2.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.4.4",
    "eslint": "^8.57.0",
    "iqb-dev-components": "^1.4.1",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.0.1",
    "ts-node": "^10.9.1",
    "typescript": "5.8.3"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "extends": "@iqb/eslint-config"
      },
      {
        "files": [
          "*.js"
        ],
        "extends": "@iqb/eslint-config/javascript"
      }
    ]
  }
}
